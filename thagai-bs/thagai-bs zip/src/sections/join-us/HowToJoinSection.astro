---
import Container from "@/components/Container";
import { Image } from "astro:assets";
import JoinUsImage2 from "@/assets/join-us/join-us-2.png";

const steps = [
  {
    title: "Fill out the form",
    description:
      "Fill the above form, we will quickly put you in touch with our home care professionals who are ready anytime",
  },
  {
    title: "Schedule a Call",
    description:
      "After connecting your call, our home care experts will answer your questions and provide necessary details.",
  },
  {
    title: "Get into the crew",
    description:
      "After necessary assessments and check throughs, you will be finally part of our valuable team.",
  },
];
---

<section
  id="how-to-join?"
  class="bg-custom-purple min-h-[38.8125rem] flex items-center rounded-b-[3.75rem]"
>
  <Container
    className="flex flex-col items-center desktop:flex-row desktop:justify-center desktop:items-start gap-[2rem] tablet:gap-[5.625rem]"
  >
    <Image src={JoinUsImage2} alt="" class="w-full max-w-[28.875rem]" />
    <div class="flex flex-col gap-[2.25rem]">
      <h1 class="">How To Join ?</h1>
      {
        steps.map(({ title, description }, index) => (
          <div class="flex flex-col tablet:flex-row gap-4 tablet:gap-[1.5rem]">
            <div class="flex gap-4 tablet:gap-[1.5rem]">
              <span class="text-base tablet:text-[3.125rem] font-bold">
                {index + 1}.
              </span>
              <p class="font-bold text-base tablet:text-[1.875rem] max-w-[10.25rem]">
                {title}
              </p>
            </div>
            <p class="text-base font-normal text-primary text-justify max-w-[26.25rem] tablet:mt-3">
              {description}
            </p>
          </div>
        ))
      }
    </div>
  </Container>
</section>

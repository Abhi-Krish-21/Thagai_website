---

<Layout
  title="Palliative Care - Services"
  activePage="services/palliative-care"
>
  <SubPagesHeroSection title={page.title} {...page.heroSection} />
  <ApproachesSection
    title={`Our Approach To ${page.title}`}
    boxes={page.approaches}
  />
  <SubPagesCardsSection cards={page.cards} />
  <FAQsSection faqs={page.faqs} />
</Layout>
